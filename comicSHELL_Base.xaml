    xmlns:my_tiles="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
    Title="ComicViewer"                     
    Height="1500" 
    Width="1000" 
    Background="#191970"
    ShowTitleBar="True"
    ResizeMode="CanResizeWithGrip"
	>
